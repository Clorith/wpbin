{
	"name": "aMoniker/wpbin",
	"description": "wpbin.io is just the coolest Wordpress paste site",
	"keywords": ["wordpress", "paste", "wpbin"],
	"license": "Copyright 2014 Viresco LLC",
	"require": {
		"laravel/framework": "4.2.*",
		"nategood/httpful": "*"
	},
    "require-dev": {
        "phpspec/phpspec": "~2.0",
        "benconstable/phpspec-laravel": "~1.0",
        "phpspec/nyan-formatters": "1.*"
    },
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php",
            "src/WPBin",
            "app/WPBin"
		],
        "psr-0": {
            "WPBin\\Core": "src",
            "WPBin\\Web": "app"
        }
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist",
        "bin-dir": "bin"
	},
	"minimum-stability": "stable"
}
