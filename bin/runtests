DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/.."

BOLD="$(tput bold)"
WHITEF="$(tput setaf 7)"
BLACKF="$(tput setaf 235)"
BLUE="$(tput setab 004)"
NORMAL="$(tput sgr0)"

wpbin_notice () {
    printf "\n${BOLD}${WHITEF}\\${BLUE}WPBin${NORMAL}${BOLD}${WHITEF}/ ${NORMAL}${BOLD}$1${NORMAL}"
}

# run phpspec tests
wpbin_notice "Running phpspec tests...\n"
$DIR/bin/phpspec run
